<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="VtolVrRankedMissionSetup.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VtolVrRankedMissionSetup"
    xmlns:vts="using:VtolVrRankedMissionSetup.VTS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="VtolVrRankedMissionSetup">

    <Grid x:Name="MainGrid">
        <Grid.Resources>
            <DataTemplate x:Key="BaseDisplay" x:DataType="vts:BaseInfo">
                <Border 
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="4"
                    Padding="8"
                    CornerRadius="8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{x:Bind Prefab.Id}" Padding="0 0 8 0"/>
                        <TextBlock Text="{x:Bind Prefab.BaseName}"/>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <MenuBar Grid.Row="0" Background="#1f000000" >
            <MenuBarItem Title="File">
                <MenuFlyoutItem Text="Open Map" Click="OnOpenClicked">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="O"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Save Scenario" Click="OnSaveClicked">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="S"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>
        </MenuBar>

        <ComboBox Grid.Row="1" x:Name="ScenarioModeComboBox" Header="Scenario Mode" Margin="8" SelectionChanged="ScenarioModeComboBox_SelectionChanged"/>

        <ScrollView Grid.Row="2" HorizontalScrollMode="Auto" VerticalScrollMode="Disabled">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="400" />
                </Grid.ColumnDefinitions>
                <Grid
                    Grid.Column="0"
                    Background="AliceBlue">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0">Allied</TextBlock>
                    <ListView
                        Grid.Row="1"
                        AllowDrop="True"
                        CanReorderItems="True"
                        CanDragItems="True"
                        DragItemsStarting="BaseInfoDragStarting"
                        DragEnter="TeamListDragEnter"
                        Drop="TeamADragDrop"
                        ItemsSource="{x:Bind TeamABases, Mode=TwoWay}"
                        ItemTemplate="{StaticResource BaseDisplay}"
                        Padding="0 8"/>
                </Grid>

                <Grid
                    Grid.Column="1"
                    Background="Pink">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0">Enemy</TextBlock>
                    <ListView
                        Grid.Row="1"
                        AllowDrop="True"
                        CanReorderItems="True"
                        CanDragItems="True"
                        DragItemsStarting="BaseInfoDragStarting"
                        DragEnter="TeamListDragEnter"
                        Drop="TeamBDragDrop"
                        ItemsSource="{x:Bind TeamBBases, Mode=TwoWay}"
                        ItemTemplate="{StaticResource BaseDisplay}"
                        Padding="0 8"/>
                </Grid>
            </Grid>
        </ScrollView>
    </Grid>
</Window>
